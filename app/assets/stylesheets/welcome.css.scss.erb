#nav-bar {

  background-color: #303030;
  height: 40px;
  text-align: right;
}

.nav-links {
  margin: 8px;
  display: inline-block;
  border-radius:20px;
  font-family: Helvetica;
  font-size: 1.5em;
  color: white;
}

.nav-links:hover {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3), inset 0px 0px 0px rgba(0, 0, 0, 0.3), 0 0 28px 6px rgba(255,255,255, 0.3);
    -moz-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3), 0 0 0px 0px rgba(255,255,255, 0.3);
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3), inset 0px 0px 0px rgba(0, 0, 0, 0.3), 0 0 28px 6px rgba(255,255,255, 0.3);
}

#title {
  color: white;
  font-size: 4em;
  font-family: Helvetica;
  text-align: center;
}

#main-container {
  text-align: center;
  background: url("<%= asset_path 'radio.png' %>") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 800px;
  min-width: 1024px;
}